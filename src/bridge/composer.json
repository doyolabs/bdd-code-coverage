{
    "name": "doyo/code-coverage-bridge",
    "description": "An easy way to integrate code coverage into your project/testing tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Doyo\\Bridge\\CodeCoverage\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spec\\Doyo\\Bridge\\CodeCoverage\\": "Spec"
        }
    },
    "replace": {
        "doyo/code-coverage-bridge": "1.0.x"
    },
    "require": {
        "php": ">=7.0",
        "psr/http-message": "^1.0",
        "symfony/cache": "^3.4 | ^4.0",
        "symfony/console": "^3.4 | ^4.0",
        "symfony/http-foundation": "^3.4 | ^4.0"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behatch/contexts": "^3.2",
        "doyo/behat-code-coverage": "^1.0@dev",
        "doyo/phpspec-code-coverage": "^1.0@dev",
        "phpspec/phpspec": "^4.3 | ^5.0",
        "phpunit/phpcov": "^4.0 | >=5.0",
        "symfony/process": "^3.4 | ^4.0"
    }
}
