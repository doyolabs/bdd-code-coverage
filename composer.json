{
    "name": "doyo/code-coverage-bridge",
    "description": "Add a functionality to customize phpunit/php-code-coverage",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Doyo\\Bridge\\CodeCoverage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Doyo\\Bridge\\CodeCoverage\\": "spec/",
            "Test\\Doyo\\Bridge\\CodeCoverage\\": "tests/"
        }
    },
    "replace": {
        "doyo/code-coverage-bridge": "self.version"
    },
    "require": {
        "php": ">=7.0",
        "phpunit/php-code-coverage": "^4.3 | ^5.0",
        "sebastian/environment": "^3.1 | ^4.2"
    },
    "require-dev": {
        "phpspec/phpspec": "^4.3 | ^5.0",
        "symfony/http-foundation": "^3.4 | ^4.3",
        "symfony/cache": "^3.4",
        "phpunit/phpcov": "^4.0 | ^5.0",
        "doyo/phpspec-code-coverage": "^0.2.0",
        "phpunit/phpunit": "^6.0"
    }
}
