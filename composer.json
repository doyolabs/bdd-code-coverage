{
    "name": "doyo/code-coverage",
    "description": "Add a functionality to customize phpunit/php-code-coverage",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Doyo\\Bridge\\CodeCoverage\\": "src/bridge",
            "Doyo\\Behat\\CodeCoverage\\": "src/behat",
            "Doyo\\PhpSpec\\CodeCoverage\\": "src/phpspec"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spec\\Doyo\\Bridge\\CodeCoverage\\": "src/bridge/Spec",
            "Spec\\Doyo\\Behat\\CodeCoverage\\": "src/behat/Spec",
            "Spec\\Doyo\\PhpSpec\\CodeCoverage\\": "src/phpspec/Spec"
        }
    },
    "require": {
        "php": ">=7.0",
        "phpunit/php-code-coverage": "^4.3 | >=5.0",
        "sebastian/environment": "^3.1 | ^4.2",
        "doyo/symfony-bridge": "^1.0@dev",
        "symfony/event-dispatcher": "^3.4 | ^4.0",
        "symfony/dependency-injection": "^3.4 | ^4.0",
        "symfony/config": "^3.4 | ^4.0",
        "behat/behat": "^3.5"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.3",
        "phpspec/phpspec": "^4.3 | ^5.0",
        "phpunit/phpcov": "^5.3 | >= 6.0",
        "phpunit/phpunit": ">=6.0",
        "symfony/cache": "^3.4",
        "symfony/console": "^3.4 | ^4.3",
        "symfony/http-foundation": "^3.4 | ^4.3",
        "symfony/yaml": "^3.4 | ^4.0"
    }
}
